<assembly>
    <id>${project.version}</id>
    <includeBaseDirector>true</includeBaseDirector>
    <formats>
        <format>dir</format>
        <format>tar.gz</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <include>conf/**</include>
        </fileSet>
        <fileSet>
            <includes>
                <include>bin/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../server/target/hey-disk-server.jar</source>
            <outputDirector>target</outputDirector>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.heyqing.disk:server</include>
            </includes>
        </moduleSet>
    </moduleSets>
</assembly>